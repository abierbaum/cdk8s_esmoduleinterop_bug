{
  "compilerOptions": {
    "alwaysStrict": true,
    "charset": "utf8",
    //"declaration": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "lib": [
      "es2016"
    ],
    "module": "CommonJS",
    "target": "ES2017",

    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "stripInternal": true,


    "outDir": "./dist/out-tsc",
    "declaration": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",

    /*
    "target":"ES2019",
    "module": "commonjs",
    "lib": ["es2019"],
    */



  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules", "deps"
  ]
}
